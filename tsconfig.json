{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "jsx": "react-jsx",
    "outDir": "dist",
    "strict": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "isolatedModules": true
  },
  "include": ["src/**/*", "scripts/*", "index.ts"],
  "exclude": ["node_modules", "dist"]
}
